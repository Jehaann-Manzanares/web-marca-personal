::-webkit-scrollbar
    width: 8px
    height  5px

::-webkit-scrollbar-thumb
    background:grey
    border-radius: 10px
    transition: background ease-in-out .5s
    &:hover
        background: black

.section__portfolio
    max-width 1240px
    display block
    margin 0 auto
    padding: 1.8em
    & h1
        margin-top: .8em
        color var(--colorAzul)
    

.subtitle
    color var(--colorAzul)
    font-size: 1.2em
    margin: 1em 0
.container__portfolio
    overflow: scroll
    overflow-y:hidden
    margin-bottom: 5em

.scroll__portfolio
    display: flex
    white-space nowrap
    padding 3em .5em
    &:hover .proyecto
        opacity .3
    & .proyecto:hover
        opacity 1
        transform: scale(1.05)
        margin-right: .5em
    
.proyecto
    
    margin: 0 .5em
    transition: .5s all
    text-align: center
    cursor pointer
        
    
.proyecto__img
    height auto
    width 24em
    border-radius 5px
@media screen and (max-width : 425px )
    .proyecto__img
        width 15em
        