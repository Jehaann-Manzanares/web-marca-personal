::-webkit-scrollbar
    width: 8px
    height  5px

::-webkit-scrollbar-thumb
    background:grey
    border-radius: 10px
    transition: background ease-in-out .5s
    &:hover
        background: black

.section__portfolio
    max-width 1240px
    display block
    margin 0 auto
    padding: 1.8em
    & h1
        margin-top: .8em
    

.subtitle
    color var(--colorAzul)
    font-size: 1.2em
    margin: 1em 0
.container__portfolio
    overflow: scroll
    overflow-y:hidden
    margin-bottom: 2em

.scroll__portfolio
    display: flex
    white-space nowrap
.proyecto
    margin: 0 .5em
.proyecto__img
    height 20em
    width auto
    border-radius 5px

    